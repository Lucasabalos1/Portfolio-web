<section id="contactame" class="min-h-[30vh]">
  <div class="w-11/12 my-4 mx-auto">
    <h2 class="text-center py-10 text-5xl font-bold tracking-widest bg-linear-to-r from-white to-blue-400 bg-clip-text text-transparent drop-shadow-[0_0_10px_rgba(96,165,250,0.5)] [text-shadow:0_0_15px_rgba(96,165,250,0.3)]">Contactame</h2>
    <span class="block text-center text-xl">¿Tienes una vacante o un proyecto en mente? Mi bandeja de entrada siempre está abierta</span>
    <div class="w-4/5 md:w-1/2 mt-10 mx-auto bg-blue-950 border border-yellow-600/20 rounded-3xl">
      <form class="formulario">
        <div class="flex flex-col p-4">
            <label for="name" class="text-lg font-bold pt-2">Nombre:</label>   
            <input class="bg-white/5 border border-white/10 rounded-xl p-1 focus:border-blue-500 outline-none transition-all" id="name" name="from_name" type="text" placeholder="Ingrese su nombre" required />
            
            <label for="name" class="text-lg font-bold pt-2">Mail:</label>
            <input class="bg-white/5 border border-white/10 rounded-xl p-1 focus:border-blue-500 outline-none transition-all" id="mail" name="email_id" type="email" placeholder="Ingrese su email" required />
            
            <label for="name" class="text-lg font-bold pt-2">Asunto:</label>
            <input class="bg-white/5 border border-white/10 rounded-xl p-1 focus:border-blue-500 outline-none transition-all" id="subject" name="subject" type="text" placeholder="Ingrese su asunto" required />
            
            <label for="name" class="text-lg font-bold pt-2">Mensaje:</label>
            <textarea class="resize-none bg-white/5 border border-white/10 rounded-xl p-3 h-32 focus:border-blue-500 outline-none transition-all" id="message" name="message" placeholder="Ingrese su mensaje" required></textarea>
        </div>
        <button class="submitForm my-3 mx-auto block w-1/2 bg-blue-600 font-bold p-2 rounded-2xl hover:bg-blue-700 transition-all cursor-pointer" type="submit">Enviar Mensaje</button>
      </form>
    </div>
    <div class="my-10">
      <span class="block text-center text-3xl font-bold tracking-widest bg-linear-to-r from-white to-blue-400 bg-clip-text text-transparent drop-shadow-[0_0_10px_rgba(96,165,250,0.5)] [text-shadow:0_0_15px_rgba(96,165,250,0.3)]">Mis redes</span>
      <ul class="flex justify-around mt-5 gap-1">
        <li class="w-1/3 md:w-70" >
          <span class="group flex flex-col items-center justify-center bg-white/5 border border-white/10 rounded-2xl p-4 transition-all duration-300 hover:bg-blue-600/20 hover:border-blue-500/50 hover:-translate-y-1 hover:shadow-[0_10px_20px_rgba(37,99,235,0.2)] ">
        <span class="text-blue-400 font-bold text-[.60rem] md:text-lg group-hover:text-blue-300 transition-colors">Correo Electronico</span>
        <span class="text-white/60 text-[.5rem] md:text-sm">Lukotas100@gmail.com</span>
          </span>
        </li>
        <li class="w-1/3 md:w-70" >
          <a href="https://www.linkedin.com/in/lucas-abalos-385936259" target="_blank" rel="noopener noreferrer" class="group flex flex-col items-center justify-center bg-white/5 border border-white/10 rounded-2xl p-4 transition-all duration-300 hover:bg-blue-600/20 hover:border-blue-500/50 hover:-translate-y-1 hover:shadow-[0_10px_20px_rgba(37,99,235,0.2)] ">
        <span class="text-blue-400 font-bold text-[.60rem] md:text-lg group-hover:text-blue-300 transition-colors">LinkedIn</span>
        <span class="text-white/60 text-[.5rem] md:text-sm">Perfil Profesional</span>
          </a>
        </li>
        <li class="w-1/3 md:w-70" >
          <a href="https://github.com/Lucasabalos1" target="_blank" rel="noopener noreferrer" class="group flex flex-col items-center justify-center bg-white/5 border border-white/10 rounded-2xl p-4 transition-all duration-300 hover:bg-blue-600/20 hover:border-blue-500/50 hover:-translate-y-1 hover:shadow-[0_10px_20px_rgba(37,99,235,0.2)] ">
        <span class="text-blue-400 font-bold text-[.60rem] md:text-lg group-hover:text-blue-300 transition-colors">Github</span>
        <span class="text-white/60 text-[.5rem] md:text-sm">Perfil Github</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>

<script>
  import emailjs from '@emailjs/browser';
  import { PUBLIC_EMAILJS_SERVICE_ID, PUBLIC_EMAILJS_TEMPLATE_ID, PUBLIC_EMAILJS_PUBLIC_KEY } from 'astro:env/client';

  const form = document.querySelector(".formulario") as HTMLFormElement;
  const submitBtn = document.querySelector(".submitForm") as HTMLButtonElement;

  form?.addEventListener("submit", (event) => {
    event.preventDefault();

    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerText = "Enviando...";
    }

    const SERVICE_ID = PUBLIC_EMAILJS_SERVICE_ID;
    const TEMPLATE_ID = PUBLIC_EMAILJS_TEMPLATE_ID;
    const PUBLIC_KEY = PUBLIC_EMAILJS_PUBLIC_KEY;

    
    emailjs.sendForm(SERVICE_ID, TEMPLATE_ID, event.target as HTMLFormElement, PUBLIC_KEY)
      .then(() => {
        alert("¡Mensaje enviado con éxito!");
        form.reset(); 
      })
      .catch((error) => {
        console.error("Error:", error);
        alert("Hubo un error al enviar el mensaje.");
      })
      .finally(() => {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerText = "Enviar Mensaje";
        }
      });
  });
</script>
